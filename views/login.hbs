<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />
  </head>
<body>
  <div class="center-wrapper">
  <div class="container">
    <h2 class="title">Login</h2>

    {{#if message}}
      <div class="alert">{{message}}</div>
    {{/if}}

    <form action="/auth/login" method="POST" class="form">
      <div class="form-group">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" required autocomplete="off" class="form-input" />
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" required class="form-input" />
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Login</button>
        <a href="/auth/github" class="btn btn-secondary">Login with GitHub</a>
      </div>
    </form>
    <p class="sublink">Don't have account? <a href="/auth/register">Register</a> now!</p>
  </div>
</div>

</body>
</html>