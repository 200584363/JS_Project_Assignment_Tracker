<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List</title>
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />
  </head>
<body>
<div class="center-wrapper">
  <div class="container2">
    <h2 class="title">My Assignments</h2>

    <a href="/assignments/create" class="btn btn-success mb-2">Create New Assignment</a>

    <div class="table-wrapper">
      <table class="styled-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>File</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each assignments}}
          <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.dueDate}}</td>
            <td>
              {{#if this.uploadedFile}}
                <a href="/uploads/{{this.uploadedFile}}" target="_blank">View</a>
              {{else}}
                No file
              {{/if}}
            </td>
            <td>
              <div class="btn-group">
              <a href="/assignments/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
              <form action="/assignments/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-md" onclick="return confirm('Delete this assignment?')">Delete</button>
              </form>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>
</html>
